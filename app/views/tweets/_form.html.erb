<%= form_with model: tweet, url: url,method: method, local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  <span class="indispensable">必須</span>
  <%= f.text_field :title, placeholder: "夢のタイトル", class:"new-tweet" %>
  <span class="indispensable">必須</span>
  <%= f.text_area :text, placeholder: "夢の内容", rows: "10", class:"new-tweet" %>
  <%= f.text_area :thoughts, placeholder: "夢を見た感想など", rows: "5", class:"new-tweet" %>
  <%= f.text_field :tag_name, placeholder: "タグ", id: 'tweet_tag_name', class:"new-tweet" %>
  <div id="search-result"></div>
  <div class="tweet-form">気持ち<span class="indispensable">必須</span></div>
  <%= f.collection_select(:mind_id, Mind.all, :id, :name, {include_blank: "---"}, {class:"select-box"}) %>
  <div class="tweet-form">カテゴリー<span class="indispensable">必須</span></div>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {include_blank: "---"}, {class:"select-box"})%>
  <div class="tweet-form">夢の長さ<span class="indispensable">必須</span></div>
  <%= f.collection_select(:time_length_id, TimeLength.all, :id, :name, {include_blank: "---"}, {class:"select-box"})%>
  <div class="text-center"><%= f.submit '投稿', class: "new-submit-btn" %></div>
<% end %>