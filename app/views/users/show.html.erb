<div class="contents row">
  <p><%= @user.nickname %>（<%= @user.gender_i18n %>・<%= @user.age_i18n %>）の夢</p>
    <div class="container">
      <% @tweets.each do |tweet| %>
      <h5 class="card-header"><%= link_to tweet.title, tweet_path(tweet.id) %></h5>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"></li>
        <li class="list-group-item">気持ち： <%= Mind.find(tweet.mind_id)[:name] %></li>
        <li class="list-group-item">カテゴリー：<%= Category.find(tweet.category_id)[:name] %></li>
        <li class="list-group-item">時間帯：<%= TimeLength.find(tweet.time_length_id)[:name] %></li>
        <li class="list-group-item"></li>
      </ul>
      <% end %>
    </div>
    <p>いいねした夢</p>
    <div class="container">
      <% @favorite_tweets.each do |tweet| %>
      <h5 class="card-header"><%= link_to tweet.title, tweet_path(tweet.id) %></h5>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"></li>
        <li class="list-group-item">気持ち： <%= Mind.find(tweet.mind_id)[:name] %></li>
        <li class="list-group-item">カテゴリー：<%= Category.find(tweet.category_id)[:name] %></li>
        <li class="list-group-item">時間帯：<%= TimeLength.find(tweet.time_length_id)[:name] %></li>
        <li class="list-group-item"></li>
      </ul>
      <% end %>
    </div>
</div>